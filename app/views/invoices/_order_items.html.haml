.panel.panel-default
	.panel-body
		%table.orders-table.table.table-bordered.table-striped.table-responsive.table-hover.no-margin.deliveries-table
			%thead
				%tr
					%th
					%th Ordered Quantity
					%th Ordered Weight
					%th Delivery Quantity
					%th Delivery Weight
					%th Invoice Quantity
					%th Invoice Weight
			%tbody
				- if @invoice.new_record?
					- @invoice.order_items.each do |item|
						%tr
							%td= item.product.title
							%td= item.get_order(:quantity, @delivery)
							%td= item.get_order(:weight, @delivery)
							%td= item.quantity
							%td= item.weight
							= simple_fields_for "invoice[order_items_attributes[]]", item do |order_item|
								= order_item.hidden_field :order_quantity, value: item.quantity
								= render partial: '/order_items/order_items', locals: { order_item: order_item, product: order_item.object.try(:product)}
				- else
					- @order_items.each do |product_id, order_items|
						%tr
							%td= order_items.first.product.title
							- order_items.each do |item|
								- if item.orderable_type == "Order"
									%td.order_quantity
										= item.quantity
									%td= item.weight
								- elsif item.orderable_type == "Delivery"
									%td
										= item.quantity
									%td= item.weight
								- else
									= simple_fields_for "invoice[order_items_attributes[]]", item do |order_item|
										= render partial: '/order_items/order_items', locals: { order_item: order_item, product: order_item.object.try(:product)}					
:javascript
	$('.orders-table').dataTable( {
		"bPaginate": true,
		"bLengthChange": false,
		"bFilter": true,
		"bInfo": false,
		"bAutoWidth": false
	});
 
