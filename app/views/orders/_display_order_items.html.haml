.panel.panel-default
	.panel-body
		%table.orders-table.table.table-bordered.table-striped.table-responsive.table-hover.no-margin
			%thead
				%tr
					%th
					%th Quantity
					%th Weight
					%th Price
					%th Amount
			%tbody
				- @order.order_items.each do |item|
					= simple_fields_for "order_items_attributes[]", item do |order_item|
						%tr
							= render partial: '/order_items/form', locals: { order_item: order_item, product: order_item.object.try(:product) }
:javascript
	$('.orders-table').dataTable( {
		"bPaginate": true,
		"bLengthChange": false,
		"bFilter": true,
		"bInfo": false,
		"bAutoWidth": false
	} );