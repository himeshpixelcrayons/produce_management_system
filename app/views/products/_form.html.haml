= simple_form_for(@product) do |f|
  = f.error_notification
  .row
    .col-md-6
      .form-group
        %label.col-sm-4.control-label{:for => 'product_title' } Name
        .col-sm-8
          = f.input :title, input_html: { class: 'form-control' }, label: false
    .col-md-6
      .form-group
        %label.col-sm-4.control-label{:for => 'product_quantity' } Quantity
        .col-sm-8
          = f.input :quantity, input_html: { class: 'form-control' }, label: false
  .row
    .col-md-6
      .form-group
        %label.col-sm-4.control-label{:for => 'product_product_type_id' } Product Type
        .col-sm-8
          = f.input :product_type_id, as: :select, collection: ProductType.active.map{|p| [p.name, p.id]}, input_html: { class: 'form-control' }, label: false
    .col-md-6
      .form-group
        %label.col-sm-4.control-label{:for => 'product_price' } Price
        .col-sm-8
          = f.input :price, input_html: { class: 'form-control' }, label: false
  .form-actions
    = f.button :submit, class: "btn ink-reaction btn-flat btn-primary"
