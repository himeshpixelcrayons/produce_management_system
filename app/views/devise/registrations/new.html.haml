!!!
%html{:lang => "en"}
  %head
    %title Sign Up
  %body.menubar-hoverable.header-fixed
    / BEGIN LOGIN SECTION
    %section.section-account
      .img-backdrop{:style => "background-image: url('/assets/background-image.jpg')"}
      .spacer
      .card.contain-sm.style-transparent
        .card-body
          .row
            %br/
            %span.text-lg.text-bold.text-primary SIGN UP
            %br/
            %br/
            = simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
              = f.error_notification
              .row
                .form-group
                  .col-sm-6
                    = f.input :email, required: true, autofocus: true, input_html: { class: 'form-control' }
              .row
                .form-group
                  .col-sm-6
                    = f.input :password, required: true, input_html: { class: 'form-control' }, hint: ("#{@minimum_password_length} characters minimum" if @validatable)
              .row
                .form-group
                  .col-sm-6
                    = f.input :password_confirmation, required: true, input_html: { class: 'form-control' }
              %br
              .form-actions
                = f.button :submit, "Sign up", class: 'btn btn-primary'
            %br/
            = render "devise/shared/links"
